<div class="authorize-container">
  <div class="authorize-card">
    <h1>Sign Up</h1>
    <%= form_with(model: account, local: true) do |form| %>
      <% if account.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(account.errors.count, "error") %> prohibited this account from being saved:</h2>

          <ul>
          <% account.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <!--%= form.label :firstName %-->
        <%= form.text_field :firstName, id: :account_firstName, placeholder: 'Firstname' %>
      </div>

      <div class="field">
        <!--%= form.label :lastName %-->
        <%= form.text_field :lastName, id: :account_lastName, placeholder: 'Lastname' %>
      </div>

      <div class="field">
        <!--%= form.label :email %-->
        <%= form.text_field :email, id: :account_email, placeholder: 'Email' %>
      </div>

      <div class="field">
        <!--%= form.label :phoneNumber %-->
        <%= form.text_field :phoneNumber, id: :account_phoneNumber, placeholder: 'Phone Number' %>
      </div>

      <div class="field">
        <!--%= form.label :password %-->
        <%= form.password_field :password, id: :account_password, placeholder: 'Password' %>
      </div>

      <div class="field">
        <!--%= form.label :reenter_password %-->
        <%= form.password_field :password_confirmation, id: :account_password_confirmation, placeholder: 'Confirm Password' %>
      </div>

      <div class="field">
        <!--%= form.label :city %-->
        <%= form.text_field :city, id: :account_city, placeholder: 'City' %>
      </div>

      <!--div id="check" class="field">
        <%= form.label :I_am_a_Barber %>
        <%= form.check_box :isBarber, id: :account_isBarber %>
      </div-->

      <!--div class="field">
        <%= form.label :signUpDate %>
        <%= form.date_select :signUpDate, id: :account_signUpDate %>
      </div-->

      <!--div class="field">
        <%= form.label :userImage %>
        <%= form.text_field :userImage, id: :account_userImage %>
      </div-->

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
