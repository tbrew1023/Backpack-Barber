<p id="notice"><%= notice %></p>

<div id="back-button-container"><%= link_to main_tab4_path do %><div id="back-to-reports"><p id="back-label">Back to Reports</p></div><% end %></div>

<div id="index-wrapper">
  <h1>Product Colors</h1>

  <table>
    <thead>
      <tr>
        <th>Color</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @product_colors.each do |product_color| %>
        <tr>
          <td><%= product_color.color %></td>
          <td><%= link_to 'Show', product_color %></td>
          <td><%= link_to 'Edit', edit_product_color_path(product_color) %></td>
          <td><%= link_to 'Destroy', product_color, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Product Color', new_product_color_path %>

</div>
