<p id="notice"><%= notice %></p>

<div id="back-button-container"><%= link_to main_tab4_path do %><div id="back-to-reports"><p id="back-label">Back to Reports</p></div><% end %></div>


<div id="index-wrapper">
  <h1>Product Sizes</h1>

  <table>
    <thead>
      <tr>
        <th>Size</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @product_sizes.each do |product_size| %>
        <tr>
          <td><%= product_size.size %></td>
          <td><%= link_to 'Show', product_size %></td>
          <td><%= link_to 'Edit', edit_product_size_path(product_size) %></td>
          <td><%= link_to 'Destroy', product_size, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Product Size', new_product_size_path %>
</div>
