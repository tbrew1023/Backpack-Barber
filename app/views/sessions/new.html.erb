<h1>Login</h1>
<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :name, "Username" %>
    <%= text_field_tag :name, params[:name] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password, params[:password] %>
  </div>
  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
<% end %>
